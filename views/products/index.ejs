<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
        .product {
            border: 1px solid #ddd;
            margin: 20px;
            padding: 20px;
            width: 250px;
            text-align: center;
        }
        img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <h1>Product List</h1>
    <div class="products">
        <% products.forEach(function(product) { %>
            <div class="product">
                <h2><%= product.name %></h2>
                <img src="<%= product.img %>" alt="<%= product.name %>">
                <p>Price: $<%= product.price %></p>
                <p>Description: <%= product.desc %></p>
            </div>
        <% }) %>
    </div>
</body>
</html>
